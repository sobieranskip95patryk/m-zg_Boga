# Environment Variables for Hip-Hop Universe Web App
# Copy to .env.local and fill with your actual values

# Contract Addresses (from deployment)
NEXT_PUBLIC_DRT_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_CONSCIOUSNESS_NFT_ADDRESS=0x...

# Network Configuration
NEXT_PUBLIC_NETWORK=mumbai
NEXT_PUBLIC_CHAIN_ID=80001
NEXT_PUBLIC_RPC_URL=https://rpc-mumbai.maticvigil.com

# For Production (Polygon Mainnet)
# NEXT_PUBLIC_NETWORK=polygon
# NEXT_PUBLIC_CHAIN_ID=137
# NEXT_PUBLIC_RPC_URL=https://polygon-rpc.com

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# IPFS Configuration
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX